<div class="card">
<h5 class="card-header info-color white-text text-center py-4">
    <strong>تسجيل الدخول </strong>
  </h5>
<div class="card-body px-lg-5 pt-0">

<%= form_for(resource, as: resource_name, url: session_path(resource_name),class:"text-center") do |f| %>
  <div class="md-form">
    <%= f.label :"البريد الالكتروني "%><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control" %>
  </div>

  <div class="md-form">
    <%= f.label :"كلمة المرور "%><br />
    <%= f.password_field :password, autocomplete: "current-password",class:"form-control" %>
  </div>
  <div class="d-flex justify-content-around">
        <div>

  <% if devise_mapping.rememberable? %>
    <div class="form-check">
       <%= f.label :تذكرني,class:"form-check-label" %>
      <%= f.check_box :remember_me,class:"form-check-input" %>
   
    </div>
    </div>
        <div>
  <% end %>

  <div class="actions">
    <%= f.submit "تسجيل الدخول",class:"btn btn-outline-info btn-rounded btn-block my-4 waves-effect z-depth-0" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
