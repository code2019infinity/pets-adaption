
 <div id="bg">
  
  <div class="jumbotron text-center">
  
  
<nav dir="ltr" class="nav" class="registration">
  <% if user_signed_in? %>
  <%= link_to "تسجيل الخروج"  , destroy_user_session_path , method: :delete,class:"nav-link btn btn-outline-warning btn-rounded waves-effect" %>
  <%= current_user.email %>
<% else %>
  <%= link_to "تسجيل الدخول "  ,new_user_session_path,class:"nav-link btn btn-outline-warning btn-rounded waves-effect"  %>
  <%= link_to " إنشاء حساب" , new_user_registration_path,class:"nav-link btn btn-outline-warning btn-rounded waves-effect" %>
  <% end%>
</nav>

  <h1 >تبناني</h1> 
   </div>

   <div class="continer">
<div class="card">
<h5 class="card-header info-color white-text text-center py-4">
    <strong>تسجيل الدخول </strong>
  </h5>
<div class="card-body px-lg-5 pt-0">

<%= form_for(resource, as: resource_name, url: session_path(resource_name),class:"text-center") do |f| %>
  <div class="md-form">
    <%= f.label :"البريد الالكتروني "%><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control" %>
  </div>

  <div class="md-form">
    <%= f.label :"كلمة المرور "%><br />
    <%= f.password_field :password, autocomplete: "current-password",class:"form-control" %>
  </div>
  <div class="d-flex justify-content-around">
        <div>

  <% if devise_mapping.rememberable? %>
    <div class="form-check">
       <%= f.label :تذكرني,class:"form-check-label" %>
      <%= f.check_box :remember_me,class:"form-check-input" %>
   
    </div>
    </div>
        <div>
  <% end %>

  <div class="actions">
    <%= f.submit "تسجيل الدخول",class:"btn btn-outline-info btn-rounded btn-block my-4 waves-effect z-depth-0" %>
  </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
